<odoo>
    <record id="group_contact_validator" model="res.groups">
        <field name="name">Contact Validator</field>
    </record>

    <!-- Ensure only the 'Contact Validator' group can validate contacts -->
    <record id="contact_validator_access" model="ir.model.access">
        <field name="name">contact_validator_access</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="group_id" ref="group_contact_validator"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
